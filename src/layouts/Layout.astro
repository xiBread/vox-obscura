---
import "../app.css";
import "@fontsource-variable/inter";
import "@fontsource-variable/jetbrains-mono";

import { Image } from "astro:assets";
import { ViewTransitions } from "astro:transitions";
import grain from "../assets/grain.jpg";

export interface Props {
	title: string;
}
---

<html lang="en" class="antialiased">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<link rel="icon" type="image/svg+xml" href="/logo.svg" />

		<title>{Astro.props.title} &bullet; Vox Obscura</title>

		<script src="../sketch.ts"></script>

		<ViewTransitions />
	</head>

	<body class="bg-neutral-950 text-white">
		<canvas
			id="p5-canvas"
			class="fixed inset-0 -z-20 opacity-0 transition-opacity duration-[1.5s] ease-in-out"
			transition:persist
		>
		</canvas>

		<Image
			class="fixed inset-0 -z-10 size-full object-cover opacity-40 mix-blend-difference"
			src={grain}
			alt=""
			loading="eager"
		/>

		<main class="flex flex-col">
			<slot />
		</main>
	</body>
</html>
