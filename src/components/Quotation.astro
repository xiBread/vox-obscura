---
export interface Props {
	author: string;
	source: string;
}

const { author, source } = Astro.props;
---

<figure class="prose-blockquote:font-normal prose-blockquote:not-italic">
	<blockquote class="not-prose text-neutral-300 [&>p]:text-justify whitespace-pre">
		<slot />
	</blockquote>

	<figcaption>
		&mdash; {author}, <cite>{source}</cite>
	</figcaption>
</figure>
